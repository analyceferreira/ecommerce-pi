<script>
  let productLists = document.getElementsByClassName('.glider')

  for (glider in productLists){
new Glider(glider, {
  slidesToShow: 4,
  slidesToScroll: 2,

  draggable: true,
  dragVelocity: 1.3,
  scrollLock: true,
  resizeLock: true,
  arrows: {
    prev: '.glider-prev',
    next: '.glider-next'
  }
})}
</script>

