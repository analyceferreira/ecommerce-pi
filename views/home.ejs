<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Home</title>
    <link rel="stylesheet" href="/css/home.css">
    <link rel="stylesheet" href="https://fonts.sandbox.google.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,300,0,-50..200" />

</head> 
<body>

    <!-- ---------------------- HERO ----------------------- -->
    <section class="hero">
        <div class="left-arrow-button"></div>
        
        <div class="hero-banner container">
            <h1>Banner</h1>
            <span>Lorem ipsum dolor sit int amet, consectetur</span>
            <input type="button" value="Lorem Ipsum">
        </div>
        <div class="right-arrow-button"></div>
    </section>
    

    <!-- ---------------------- BAR ----------------------- -->
    <section class="bar">
        <div class="bar-container container">
            <div class="bar-item">
                <img src="/img/icons/frete-icon-b.png" class="bar-item-image"/>
                <div class="bar-item-text">
                    <h5>Frete Grátis</h5>
                    <span>Em compras acima de R$200</span>
                </div>
            </div>
            <div class="bar-item">
                <img src="/img/icons/credit-card-icon-b.png" class="bar-item-image"/>
                <div class="bar-item-text">
                    <h5>Parcele Suas Compras</h5>
                    <span>No cartão de crédito</span>
                </div>
            </div>
            <div class="bar-item">
                <img src="/img/icons/insurance-b.png" class="bar-item-image"/>
                <div class="bar-item-text">
                    <h5>Compra Garantida</h5>
                    <span>Site 100% seguro</span>
                </div>
            </div>
            <div class="bar-item">
                <img src="/img/icons/discount--icon-b.png" class="bar-item-image"/>
                <div class="bar-item-text">
                    <h5>Desconto</h5>
                    <span>Pagando com boleto</span>
                </div>
            </div>
        </div>
    </section>


    <!-- ---------------------- MAIN ----------------------- -->
    <main class="container">

        
    <!-- ---------------------- PRODUCT LIST ----------------------- -->
        <section class="section-products-list">
                <h2 class="h2-sections">Selecionados Para Você</h2>
                <%- include('./partials/product-list.ejs') %>
        </section>


    <!-- ---------------------- BANNERS VERTICALS ----------------------- -->
        <section class="banners-vertical">
            <div class="banners-image-left"></div>
            <div class="banners-image-center"></div>
            <div class="banners-image-right"></div>
        </section>


    <!-- ---------------------- PRODUCT GALLERY ----------------------- -->
        <section class="section-gallery-products">
            <h2 class="h2-sections">Destaques</h2>
            <div class="gallery-products">
            <div class="product-item">
                <a href="" class="image">
                    <img  src="/img/icons/img-icon.png" alt="">
                </a>
                <div class="product-item-info">
                    <div class="product-item-info-text">
                        <a href=""><span class="title">Lorem ipsum dolor sit amet consectetur </span></a>
                        <a href=""><span class="price">R$239,99</span></a>
                    </div>    
                    <a href="#"><img class="like-button" src="/img/icons/like-icon-b.png" alt=""></a>
                </div>
            </div>

            <%- include('./partials/product-item.ejs') %>

            </div>
        </section>



    <!-- ---------------------- BANNERS BANNERS HORIZONTALS ----------------------- -->
        <section class="banners-horizontal">
            <div class="banners-image-left"></div>
            <div class="banners-image-right"></div>
        </section>


    <!-- ---------------------- PRODUCT LIST ----------------------- -->
        <section class="section-products-list">
            <h2 class="h2-sections">Promoções imperdivéis</h2>
            <%- include('./partials/product-list.ejs') %>
        </section>
    </main>

    <%- include('./partials/footer.ejs') %>

</body>
</html>